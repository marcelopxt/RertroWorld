<div class="container mt-5">
  <h2 class="text-center" style="color: var(--azul);">Alteração de Jogo</h2>
  <hr class="mb-4">
</div>

<form action="/jogos/altera/{{jogo._id}}" data-bs-theme="dark" method="POST" enctype="multipart/form-data">
  <div class="row">
    <div class="form-group col-md-8">
      <label for="titulo" class="form-label">Título:</label>
      <input type="text" class="form-control" id="titulo" name="titulo" value="{{jogo.titulo}}">
    </div>

    <div class="form-group col-md-4">
      <label for="tag" class="form-label">Console do Jogo</label>
      <select class="form-select" id="tag" name="tag" required>
        <option value="Playstation" {{#if tagPlaystation}}selected{{/if}}>Playstation</option>
        <option value="Nintendo" {{#if tagNintendo}}selected{{/if}}>Nintendo</option>
        <option value="Arcade" {{#if tagArcade}}selected{{/if}}>Arcade</option>
      </select>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <label for="descJogo" class="form-label">Descrição do jogo:</label>
      <textarea id="descJogo" name="descJogo" class="form-control" rows="5">{{jogo.descJogo}}</textarea>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-12">
      <label for="iframe" class="form-label">Iframe do jogo:</label>
      <input id="iframe" name="iframe" class="form-control" value="{{jogo.iframe}}">
    </div>
  </div>

  <div class="row">
    <div class="form-group mt-3">
      <label for="file" class="form-label">Imagem do Jogo:</label>
      <input type="file" class="form-control" id="file" name="file">
    </div>
  </div>

  <button type="submit" class="btn btn-primary mt-3">Atualizar</button>
  <a href="/" class="btn btn-secondary mt-3">Cancelar</a>
</form>


</div>